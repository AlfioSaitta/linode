{
    "name": "samuelmwangiw/linode",
    "description": "A Simple Linode client built for Laravel with @JustSteveKing laravel-transporter package",
    "keywords": [
        "SamuelMwangiW",
        "laravel",
        "linode"
    ],
    "homepage": "https://github.com/samuelmwangiw/linode",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Mwangi",
            "email": "samuel@samuelmwangi.co.ke",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "illuminate/contracts": "^9.0",
        "illuminate/http": "^9.0",
        "juststeveking/laravel-transporter": "^1.0",
        "sammyjo20/saloon-laravel": "^1.5",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.18",
        "pestphp/pest-plugin-laravel": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "SamuelMwangiW\\Linode\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamuelMwangiW\\Linode\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LinodeServiceProvider"
            ],
            "aliases": {
                "Linode": "LinodeFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
